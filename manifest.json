{
  "manifest_version": 3,
  "name": "VocalChess: Voice Control for Chess.com",
  "version": "1.7",
  "permissions": ["audioCapture", "storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/*"],
      "js": ["bridge.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    },
    {
      "matches": ["https://www.chess.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/vosk.js", "models/vosk-model-small-en-us-0.15.zip"],
      "matches": ["https://www.chess.com/*"]
    }
  ]
}